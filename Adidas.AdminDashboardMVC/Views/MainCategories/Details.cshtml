@model Adidas.DTOs.Separator.Category_DTOs.CategoryDto

@{
    ViewData["Title"] = "Main Category Details: " + Model.Name;
}

<style>
    .page-shell {
        background: radial-gradient(circle at top, #e5f2ff 0, #f9fafb 40%, #eef2ff 100%);
        min-height: 100vh;
        padding-top: 1.5rem;
        padding-bottom: 1.5rem;
    }

    .details-header-title {
        font-weight: 600;
        letter-spacing: 0.03em;
        color: #111827;
    }

    .details-header-subtitle {
        color: #6b7280;
        font-size: 0.9rem;
    }

    .badge-chip {
        border-radius: 999px;
        padding: 0.25rem 0.75rem;
        font-size: 0.75rem;
        background: #eff6ff;
        color: #1d4ed8;
        border: 1px solid #bfdbfe;
    }

    .details-card {
        border-radius: 1.25rem;
        border: 1px solid #e5e7eb;
        box-shadow: 0 18px 40px rgba(148, 163, 184, 0.25);
    }

    .sub-table-card {
        border-radius: 1.25rem;
        border: 1px solid #e5e7eb;
        box-shadow: 0 16px 35px rgba(148, 163, 184, 0.2);
    }

    .dl-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: #6b7280;
        text-transform: uppercase;
        letter-spacing: 0.04em;
    }

    .dl-value {
        font-size: 0.95rem;
        color: #111827;
    }

    .table thead th {
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.04em;
        color: #6b7280;
        border-top: none;
    }

    .table tbody td {
        vertical-align: middle;
        font-size: 0.9rem;
    }

    .category-image-frame {
        border-radius: 1rem;
        border: 1px solid #e5e7eb;
        background: #f9fafb;
    }
</style>

<div class="page-shell">
    <div class="container-fluid">

        <!-- Header Section -->
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-3">
            <div class="mb-2">
                <div class="badge-chip mb-2">
                    <i class="bi bi-folder2-open me-1"></i>
                    Main Category
                </div>
                <h2 class="mb-1 details-header-title">@Model.Name</h2>
                <p class="details-header-subtitle mb-0">
                    View details and manage subcategories and products under this main category.
                </p>
            </div>
            <div class="d-flex flex-wrap gap-2">
                <a asp-action="Edit" asp-controller="MainCategories" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil me-1"></i> Edit
                </a>
                <a asp-action="Index" asp-controller="MainCategories" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>

        <!-- Alerts -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Main Category Info -->
        <div class="card details-card p-4 mb-4 bg-white">
            <div class="row g-4">
                <!-- Image -->
                <div class="col-md-4 text-center">
                    <div class="category-image-frame mx-auto p-2">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl"
                                 alt="Main Category Image"
                                 class="img-fluid rounded"
                                 style="max-width: 260px; max-height: 220px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="bg-light text-muted d-flex align-items-center justify-content-center rounded"
                                 style="width: 260px; height: 200px; margin: 0 auto;">
                                <i class="bi bi-image text-secondary fs-1"></i>
                            </div>
                        }
                    </div>
                    <p class="h5 mb-1 mt-3 fw-semibold">@Model.Name</p>
                    <small class="text-muted d-block">Slug: @Model.Slug</small>
                    <span class="badge bg-primary mt-2">Main Category</span>
                </div>

                <!-- Details -->
                <div class="col-md-8">
                    <dl class="row mb-3">
                        <dt class="col-sm-3 dl-label">Description</dt>
                        <dd class="col-sm-9 dl-value">
                            @(string.IsNullOrEmpty(Model.Description) ? "N/A" : Model.Description)
                        </dd>

                        <dt class="col-sm-3 dl-label">Status</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger") px-3 py-2">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                        </dd>

                        <dt class="col-sm-3 dl-label">Created</dt>
                        <dd class="col-sm-9 dl-value">
                            @Model.CreatedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")
                        </dd>

                        <dt class="col-sm-3 dl-label">Last Updated</dt>
                        <dd class="col-sm-9 dl-value">
                            @Model.UpdatedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")
                        </dd>

                        <dt class="col-sm-3 dl-label">Total Products</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info text-dark">@Model.ProductsCount products</span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Subcategories Section -->
        <div class="card sub-table-card bg-white p-3">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h4 class="mb-1">
                        <i class="bi bi-list-nested text-primary me-2"></i>
                        Subcategories (@(Model.SubCategories?.Count() ?? 0))
                    </h4>
                    <p class="text-muted mb-0" style="font-size:0.85rem;">
                        Manage subcategories under this main category.
                    </p>
                </div>
                <a asp-controller="Subcategories" asp-action="Create" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-plus me-1"></i> Add Subcategory
                </a>
            </div>

            @if (Model.SubCategories != null && Model.SubCategories.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Slug</th>
                                <th>Products</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var subCategory in Model.SubCategories)
                            {
                                <tr>
                                    <td>
                                        <img src="@(!string.IsNullOrEmpty(subCategory.ImageUrl) ? subCategory.ImageUrl : "https://via.placeholder.com/50")"
                                             alt="@subCategory.Name"
                                             class="img-thumbnail"
                                             style="width: 50px; height: 50px; object-fit: cover;" />
                                    </td>
                                    <td>
                                        <strong>@subCategory.Name</strong><br />
                                        <small class="text-secondary">Subcategory</small>
                                    </td>
                                    <td class="text-truncate" style="max-width: 260px;">
                                        @(string.IsNullOrEmpty(subCategory.Description)
                                                                        ? "N/A"
                                                                        : (subCategory.Description.Length > 50
                                                                        ? subCategory.Description.Substring(0, 50) + "..."
                                                                        : subCategory.Description))
                                    </td>
                                    <td>@subCategory.Slug</td>
                                    <td>
                                        <span class="badge bg-info text-dark">@subCategory.ProductsCount</span>
                                    </td>
                                    <td>
                                        <span class="badge @(subCategory.IsActive ? "bg-success" : "bg-danger")">
                                            @(subCategory.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td class="text-nowrap">
                                        <a asp-action="Details" asp-controller="Subcategories" asp-route-id="@subCategory.Id" class="btn btn-sm btn-outline-info me-1">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-controller="Subcategories" asp-route-id="@subCategory.Id" class="btn btn-sm btn-outline-warning me-1">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="#" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@subCategory.Id">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>

                                <!-- Delete Modal for Subcategory -->
                                <div class="modal fade" id="deleteModal-@subCategory.Id" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title">Confirm Delete Subcategory</h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                Are you sure you want to delete <strong>@subCategory.Name</strong>?
                                                @if (subCategory.ProductsCount > 0)
                                                {
                                                    <div class="alert alert-warning mt-2">
                                                        <i class="bi bi-exclamation-triangle"></i>
                                                        This will affect @subCategory.ProductsCount products.
                                                    </div>
                                                }
                                                <p class="text-danger mt-2">This action cannot be undone.</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <form asp-action="Delete" asp-controller="Subcategories" method="post">
                                                    <input type="hidden" name="id" value="@subCategory.Id" />
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bi bi-trash me-1"></i> Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="bi bi-folder2-open text-muted fs-1"></i>
                    <p class="text-muted mt-2">No subcategories for this main category yet.</p>
                    <a asp-controller="Subcategories" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus me-1"></i> Create First Subcategory
                    </a>
                </div>
            }
        </div>
    </div>
</div>
