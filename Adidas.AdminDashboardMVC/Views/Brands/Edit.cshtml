@model Adidas.DTOs.Separator.Brand_DTOs.BrandUpdateDto

@{
    ViewData["Title"] = "Edit Brand";
    Layout = "_Layout";
}

<style>
    :root {
        --bg-main: #f3f4f6;
        --bg-card: rgba(255, 255, 255, 0.9);
        --border-soft: rgba(209, 213, 219, 0.9);
        --accent: #0ea5e9;
        --accent-soft: rgba(14, 165, 233, 0.2);
        --text-main: #111827;
        --text-muted: #6b7280;
    }

    body {
        background: radial-gradient(circle at top, #e5f2ff 0, #f9fafb 40%, #eef2ff 100%);
        color: var(--text-main);
    }

    .brand-layout {
        min-height: calc(100vh - 80px);
        display: flex;
        align-items: center;
    }

    .glass-card {
        background: var(--bg-card);
        border-radius: 1.5rem;
        border: 1px solid var(--border-soft);
        box-shadow: 0 18px 40px rgba(148, 163, 184, 0.35), 0 0 0 1px rgba(209, 213, 219, 0.65);
        backdrop-filter: blur(14px);
    }

    .card-gradient-border {
        position: relative;
    }

        .card-gradient-border::before {
            content: "";
            position: absolute;
            inset: -1px;
            border-radius: inherit;
            padding: 1px;
            background: linear-gradient(135deg, rgba(14, 165, 233, 0.65), rgba(129, 140, 248, 0.55));
            -webkit-mask: linear-gradient(#000 0 0) content-box, linear-gradient(#000 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
            pointer-events: none;
        }

    .page-header-title {
        font-weight: 600;
        letter-spacing: 0.03em;
        color: #111827;
    }

    .badge-subtitle {
        background: rgba(255, 255, 255, 0.9);
        border: 1px solid rgba(209, 213, 219, 0.9);
        color: var(--text-muted);
        border-radius: 999px;
        padding: 0.25rem 0.75rem;
        font-size: 0.75rem;
    }

    .chip {
        border-radius: 999px;
        padding: 0.25rem 0.75rem;
        font-size: 0.75rem;
        background: rgba(255, 255, 255, 0.9);
        border: 1px solid rgba(209, 213, 219, 0.9);
        color: var(--text-muted);
    }

    .form-label {
        font-weight: 500;
        font-size: 0.9rem;
        color: #111827;
        margin-bottom: 0.25rem;
    }

    .form-control {
        background-color: rgba(249, 250, 251, 0.9);
        border-radius: 0.75rem;
        border: 1px solid rgba(209, 213, 219, 0.9);
        color: #111827;
        font-size: 0.9rem;
    }

        .form-control::placeholder {
            color: rgba(156, 163, 175, 0.9);
        }

        .form-control:focus {
            background-color: #ffffff;
            border-color: var(--accent);
            box-shadow: 0 0 0 1px var(--accent-soft), 0 0 0 4px rgba(14, 165, 233, 0.18);
            color: #111827;
        }

    .upload-box {
        border-radius: 1rem;
        border: 1px dashed rgba(156, 163, 175, 0.9);
        background: radial-gradient(circle at top left, rgba(191, 219, 254, 0.5), #f9fafb);
    }

        .upload-box:hover {
            border-color: var(--accent);
            background: radial-gradient(circle at top left, rgba(191, 219, 254, 0.8), #ffffff);
        }

    .preview-frame {
        border-radius: 1rem;
        overflow: hidden;
        border: 1px solid rgba(209, 213, 219, 0.9);
        background: #f3f4f6;
    }

    .btn-primary {
        border-radius: 999px;
        padding-inline: 1.75rem;
        padding-block: 0.55rem;
        background: linear-gradient(135deg, #0ea5e9, #6366f1);
        border: none;
        box-shadow: 0 10px 22px rgba(59, 130, 246, 0.35), 0 0 0 1px rgba(148, 163, 184, 0.9);
        font-weight: 500;
        font-size: 0.9rem;
        color: #ffffff;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #0284c7, #4f46e5);
            box-shadow: 0 14px 28px rgba(59, 130, 246, 0.4), 0 0 0 1px rgba(148, 163, 184, 1);
        }

    .btn-outline-secondary {
        border-radius: 999px;
        font-size: 0.85rem;
        border-color: rgba(209, 213, 219, 0.9);
        color: var(--text-muted);
        background-color: #ffffff;
    }

        .btn-outline-secondary:hover {
            background-color: #f3f4f6;
            color: #111827;
        }

    .btn-light {
        border-radius: 999px;
        font-size: 0.85rem;
        background-color: #f9fafb;
        border-color: rgba(209, 213, 219, 0.9);
        color: var(--text-muted);
    }

        .btn-light:hover {
            background-color: #e5e7eb;
            color: #111827;
        }

    .card-footer {
        border-top-color: rgba(209, 213, 219, 0.9);
    }

    .alert-danger {
        border-radius: 0.9rem;
        background: #fef2f2;
        border-color: #fecaca;
        color: #b91c1c;
        font-size: 0.85rem;
    }

    @@media (max-width: 768px) {
        .brand-layout {
            align-items: flex-start;
        }
    }
</style>

<main class="container brand-layout py-4">
    <div class="row justify-content-center w-100">
        <div class="col-xl-8 col-lg-9">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <div class="badge-subtitle mb-2">
                        <i class="bi bi-badge-ad me-1"></i>
                        Edit Brand
                    </div>
                    <h2 class="mb-1 page-header-title">Edit: @Model.Name</h2>
                    <p class="mb-0 text-muted">
                        Update brand information and logo image.
                    </p>
                </div>
                <div class="d-none d-md-flex flex-column align-items-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-left-short me-1"></i>
                        Back to list
                    </a>
                    <div class="chip">
                        <i class="bi bi-stars me-1 text-warning"></i>
                        Brand management
                    </div>
                </div>
            </div>

            <section class="card-gradient-border glass-card p-1">
                <div class="card border-0 bg-transparent">
                    <div class="card-body pb-3">
                        <form asp-controller="Brands" asp-action="Edit" method="post" enctype="multipart/form-data" id="editBrandForm">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="LogoUrl" />

                            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                            <div class="row g-4">
                                <div class="col-md-7">
                                    <div class="mb-3">
                                        <label asp-for="Name" class="form-label">Brand Name</label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger small"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="Description" class="form-label">Description</label>
                                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                        <span asp-validation-for="Description" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="col-md-5">
                                    <div class="mb-2 d-flex justify-content-between align-items-center">
                                        <label class="form-label mb-0" for="LogoImageFile">Logo Image</label>
                                        <span class="text-muted small">Optional</span>
                                    </div>

                                    <div class="upload-box p-3">
                                        <div class="d-flex align-items-center mb-2">
                                            <div class="rounded-circle d-flex align-items-center justify-content-center me-2"
                                                 style="width:32px;height:32px;background:#ffffff;border:1px solid rgba(209,213,219,0.9);">
                                                <i class="bi bi-image text-primary"></i>
                                            </div>
                                            <div>
                                                <div class="small text-muted">Upload a new image to replace the old one</div>
                                                <div class="small" style="font-size:0.75rem;">Max file size: 5MB, JPG/PNG.</div>
                                            </div>
                                        </div>

                                        <input type="file"
                                               name="LogoImageFile"
                                               id="LogoImageFile"
                                               class="form-control form-control-sm bg-transparent border-0 px-0"
                                               accept="image/*" />
                                        <span asp-validation-for="LogoUrl" class="text-danger small d-block mt-1"></span>

                                        <div class="mt-3 preview-frame" id="logoPreviewContainer" style="@(string.IsNullOrEmpty(Model.LogoUrl) ? "display:none;" : "display:block;")">
                                            <img id="logoPreview"
                                                 src="@(string.IsNullOrEmpty(Model.LogoUrl) ? "#" : Model.LogoUrl)"
                                                 alt="Brand Logo Preview"
                                                 class="w-100"
                                                 style="max-height:220px;object-fit:contain;" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="card-footer bg-transparent d-flex flex-column flex-md-row justify-content-between align-items-center gap-2 pt-3">
                        <div class="d-flex align-items-center text-muted small">
                            <i class="bi bi-shield-check text-success me-2"></i>
                            Changes will be validated before saving.
                        </div>
                        <div class="d-flex gap-2">
                            <a asp-action="Index" class="btn btn-light btn-sm">
                                Cancel
                            </a>
                            <button type="submit" form="editBrandForm" class="btn btn-primary btn-sm">
                                <i class="bi bi-save2 me-1"></i>
                                Save Changes
                            </button>
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const logoInput = document.getElementById('LogoImageFile');
            const logoPreview = document.getElementById('logoPreview');
            const logoPreviewContainer = document.getElementById('logoPreviewContainer');

            if (logoInput && logoPreview && logoPreviewContainer) {
                logoInput.addEventListener('change', function (event) {
                    const file = event.target.files[0];
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = function (e) {
                            logoPreview.src = e.target.result;
                            logoPreviewContainer.style.display = 'block';
                        };
                        reader.readAsDataURL(file);
                    }
                });
            }
        });
    </script>
}
